<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.walkhealthy.WelcomeActivity">

    <TextView
        android:id="@+id/welcomeUserEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Hello!"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logoutButton"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="Logout"
        android:textSize="18sp" />

    <Button
        android:id="@+id/createGroupButton"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeUserEmailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="Create New Group"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNavigateToSearch"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createGroupButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Search Events"
        android:textSize="18sp" />

</RelativeLayout>
